/* pages/messages/messages.wxss */
.messages-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-top: calc(env(safe-area-inset-top));
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 28rpx;
  color: #999;
}

.load-more .loading-spinner {
  background: none;
  box-shadow: none;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  position: relative;
  padding-top: 100rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: absolute;
  left: 20rpx;
}

.page-header .title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.unread-badge {
  background: #f5f5f5;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.unread-badge.has-unread {
  background: #ffebee;
  color: #c62828;
  border: 1rpx solid #ffcdd2;
}

.refresh-btn {
  background: #1976d2;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  position: absolute;
  right: 20rpx;
}

.refresh-btn:active {
  background: #1565c0;
}

.refresh-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 发送消息区域 */
.send-message-section {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.send-message-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  padding: 0;
}

.send-message-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  background: linear-gradient(135deg, #ff5252, #ff7b7b);
}

.send-icon {
  font-size: 48rpx;
  line-height: 1;
}



/* 消息列表 */
.alerts-list {
  max-height: calc(100vh - 300rpx);
  border-radius: 12rpx;
  /* box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); */ /* 移除列表整体阴影，让卡片自带阴影 */
  box-sizing: border-box;
}

.alert-card {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
  transition: all 0.2s ease;
  margin-bottom: 12rpx; /* 添加卡片间距 */
}

.alert-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12);
}

.alert-card.read {
  opacity: 0.7;
  background: #fafafa;
}

.alert-content {
  padding: 24rpx;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.device-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.alert-icon {
  font-size: 28rpx;
}

.device-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.severity-badge {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: white;
  min-width: 60rpx;
  text-align: center;
}

.alert-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  overflow-wrap: break-word;
  max-height: 42px;
  overflow: hidden;
  display: -webkit-box;
}

.alert-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.timestamp {
  color: #999;
}

.alert-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.mark-read-btn {
  background: #1976d2;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.mark-read-btn:active {
  background: #1565c0;
}

.status-text {
  font-size: 22rpx;
  color: #666;
}

.status-text.read {
  color: #4caf50;
}
.status-text.unread {
  color: #c62828;
}
/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.close-btn {
  background: none;
  border: none;
  font-size: 36rpx;
  color: #999;
  padding: 8rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}


.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 详情区域 */
.detail-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.detail-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
  min-width: 120rpx;
  margin-right: 16rpx;
  font-weight: 500;
}

.detail-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.parsed-data-container {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
}

.parsed-data-content {
  font-size: 24rpx;
  color: #495057;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-btn.primary {
  background: #1976d2;
  color: white;
}

.action-btn.primary:active {
  background: #1565c0;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.action-btn.secondary:active {
  background: #e0e0e0;
}

/* 发送消息对话框 */
.send-message-dialog .modal-body {
  padding-bottom: 0;
}

.form-group {
  margin-bottom: 32rpx;
}

.message-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
  resize: none;
}

.message-textarea:focus {
  border-color: #1976d2;
  box-shadow: 0 0 0 4rpx rgba(25, 118, 210, 0.1);
}

.message-textarea:disabled {
  background: #f5f5f5;
  color: #999;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.error-message {
  background: #ffebee;
  color: #c62828;
  border: 2rpx solid #ffcdd2;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.success-message {
  background: #e8f5e8;
  color: #2e7d32;
  border: 2rpx solid #c8e6c9;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}


/* 骨架屏样式 */
.skeleton-card {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.skeleton-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.skeleton-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-animation 1.5s infinite;
  margin-right: 10px;
}

.skeleton-badge {
  width: 50px;
  height: 20px;
  border-radius: 4px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-animation 1.5s infinite;
  margin-left: auto;
}

.skeleton-line {
  height: 16px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-animation 1.5s infinite;
  border-radius: 4px;
  margin-bottom: 8px;
}

.skeleton-line.short {
  width: 60%;
}

.skeleton-line.medium {
  width: 80%;
}

.skeleton-line.long {
  width: 100%;
}

.skeleton-line.tiny {
  width: 40%;
}

.skeleton-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.skeleton-button {
  width: 70px;
  height: 28px;
  border-radius: 4px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-animation 1.5s infinite;
}

@keyframes loading-animation {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 移除全局的加载状态样式 */
.loading-overlay, .loading-spinner {
  display: none;
}
